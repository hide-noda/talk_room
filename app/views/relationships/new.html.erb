<div class="relationship">
  <%=form_with model: @relationship, local: true do |f|%>
  <h1>トーク相手を選んで承認してもらいましょう</h1>
  <div class="chat-room-form__field--right">
    <select name="room[user_ids][]">
      <option value="">トーク相手を探してください</option>
      <% User.all.where.not(id: current_user.id).each do |user| %>
        <option value=<%= user.id%>><%= user.family_name + user.last_name %></option>
      <% end %>
    </select>
    <input name="room[user_ids][]" type="hidden" value=<%= current_user.id%>>
  </div>
  <div class='chat-room-form__field'>
    <div class='chat-room-form__field--left'></div>
    <div class='chat-room-form__field--right'>
      <%= f.submit class: 'chat-room-form__action-btn'%>
    </div>
  </div>
  <% end %>
</div>