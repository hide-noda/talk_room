<div class="side-bar-header">
  <div class="header-name">
    <%= link_to current_user.family_name + current_user.last_name, edit_user_path(current_user) %>
  </div>
  <div class="create-room">
    <div class="talk-btn">
      <%= link_to "トークルーム作成", new_room_path %>
      <%= link_to "トーク相手を探す", new_relation_path%>
    </div>
  </div>
</div>

<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>