<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "チャットページに戻る", root_path, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class="name-form">
          <div class='field'>
            <div class='field-label'>
              <%= f.label :性%>
            </div>
            <div class='field-input'>
              <%= f.text_field :family_name, autofocus: true %>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :名%>
            </div>
            <div class='field-input'>
              <%= f.text_field :last_name %>
            </div>
          </div>
        </div>
        <div class="name-form">
          <div class='field'>
            <div class='field-label'>
              <%= f.label :セイ（全角カナ）%>
            </div>
            <div class='field-input'>
              <%= f.text_field :family_name_kana %>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :メイ（全角カナ）%>
            </div>
            <div class='field-input'>
              <%= f.text_field :last_name_kana %>
            </div>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "更新する", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
